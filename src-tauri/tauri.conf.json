{
	"build": {
		"devPath": "../src",
		"distDir": "../src",
		"withGlobalTauri": true
	},
	"package": {
		"productName": "kamipass",
		"version": "1.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"fs": {
				"all": true,
				"writeFile": true,
				"readDir": true,
				"copyFile": true,
				"createDir": true,
				"exists": true,
				"scope": ["**"]
			},
			"path": {
				"all": true
			}
		},
		"windows": [
			{
				"title": "kamipass",
				"width": 800,
				"height": 600,
				"minWidth": 424,
				"minHeight": 170
			}
		],
		"security": {
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.axorax.kamipass",
			"icon": ["icons/icon.icns", "icons/icon.ico", "icons/icon.png", "icons/128x128.png", "icons/32x32.png", "icons/128x128@2x.png", "icons/StoreLogo.png", "icons/Square30x30Logo.png", "icons/Square44x44Logo.png", "icons/Square71x71Logo.png", "icons/Square89x89Logo.png", "icons/Square107x107Logo.png", "icons/Square142x142Logo.png", "icons/Square150x150Logo.png", "icons/Square284x284Logo.png", "icons/Square310x310Logo.png"]
		}
	}
}
